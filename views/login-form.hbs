<div class="row justify-content-center">

    <div class="col-md-8">
        <h1>Login form</h1>
        <form method="POST" action="/login">
            <div class="form-group">
                <label for="username-input">Username</label>
                <input name="username" type="text" class="form-control" id="username-input">
            </div>
            <div class="form-group">
                <label for="password-input">Password</label>
                <input name="pwd" type="password" class="form-control" id="password-input">
            </div>
            <button type="submit" class="btn btn-dark">Process Login</button>
        </form>
    </div>



    {{#if username}}
        <div class="col-md-4">
            <h4>You just inputted following data:</h4>
            <ul>
                <li>Username: {{ username }}</li>
                <li>Password: {{ pwd }}</li>
            </ul>
        </div>
    {{else}}
        <div class="col-md-4">
            <h4>After you submit the form, you will see the data pop up here!</h4>
        </div>
    {{/if}}
</div>